<h1>Index des annonces de ventes</h1>

<div class="container">
   <% @ventes.each do |vente| %>
  <div class="row">
    <div class="col-xs-4">
      <% if vente.photo.present? %>
        <%= cl_image_tag vente.photo, height: 300, width: 300, crop: :fill %>
      <%else  %>
      <% end %>
    </div>
    <div class="col-xs-4">
      <ul>
        <li> <%= vente.name %></li>
        <li> <%= vente.description %></li>
        <li><%= vente.surface %> </li>
        <li> <%= vente.titre %></li>
        <li> <%= vente.price %></li>
      </ul>
    </div>
    <div class="col-xs-4">
      <%= link_to "Voir l'annonce", vente_path(vente), class: 'btn btn-primary'  %>
      <%= link_to "Supprimez", vente_path(vente), method: :delete, class: 'btn btn-primary'  %>
      <%= link_to "CrÃ©er une annonce", new_vente_path, class: 'btn btn-danger' %>
      <% end %>
    </div>
  </div>
</div>
