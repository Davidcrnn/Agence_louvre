

<div class="container-index">
  <% @ventes.each do |vente| %>
  <div class="row">




        <div class="content-vente">
          <div class="col-xs-12 photo-vente">
            <%= cl_image_tag vente.photo, height: 332, width: 400, crop: :fill %>
          </div>

          <div class="col-xs-12 description-vente">
            <div class="info-titre">
              <h3><i class="fas fa-map-marker-alt"></i>   <%= vente.localisation.capitalize %></h3>
              <h3><i class="fas fa-home"></i>   <%= vente.titre.capitalize %></h3>
              <h3><i class="fas fa-euro-sign"></i>   Prix TTC : <%= vente.price.capitalize %>â‚¬</h3>
              <h3><i class="fas fa-expand-arrows-alt"></i>   <%= vente.surface.capitalize %>m2</h3>
            </div>

            <div class="description">
              <p><%= vente.description %></p>
            </div>
          </div>

          <div class="col-xs-12 lien-vente">
            <p><%= link_to "Voir l'annonce", vente_path(vente) %></p><br><br>
          </div>
            <div class="new-vente">
            <% if user_signed_in? %>
                <p><%= link_to "Nouvelle annonce", new_vente_path, class: "nouvelle" %></p>
            <% end %>
            </div>
        </div>


  </div>
      <% end %>
</div>


