<div class="container">
  <h1>Index des annonces de ventes</h1>
    <%= link_to "Nouvelle annonce", new_vente_path, class: 'btn btn-success' %>

</div>

<div class="container-index">
  <% @ventes.each do |vente| %>
  <div class="row">
    <div class=" col-xs-12">
      <div class="card_vente">


        <div class="content-vente">
          <div class="photo-vente">
            <%#= cl_image_tag vente.photo, height: 332, width: 400, crop: :fill %>
          </div>

          <div class="description-vente">
            <div class="info-titre">
            <h3><i class="fas fa-map-marker-alt"></i>   <%= vente.localisation %></h3>
            <h3><i class="fas fa-home"></i>   <%= vente.titre %></h3>
              <h3><i class="fas fa-euro-sign"></i>   Prix TTC : <%= vente.price %>â‚¬</h3>
             <h3><i class="fas fa-expand-arrows-alt"></i>   <%= vente.surface %>m2</h3>

            </div>
          <div class="description">
            <p><%= vente.description %></p>
          </div>
        </div>

          <div class="lien-vente">
            <p><%= link_to "Voir l'annonce", vente_path(vente) %></p>
             <p><%= link_to "Supprimez l'annonce", vente_path(vente), method: :delete %></p>
          </div>
        </div>
      </div>
    </div>
      <% end %>
  </div>
</div>


